<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/themes_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:background="@drawable/themes_search_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:background="@null"
                    android:hint="@string/themes_search_bar"
                    android:inputType="text"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="15dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:background="@drawable/themes_category_start"
                android:text="@string/themes_category_style"
                android:textColor="@color/colorGrayLight"
                android:textSize="12sp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:background="@drawable/themes_category_mid"
                android:text="@string/themes_category_general"
                android:textColor="@color/colorGrayLight"
                android:textSize="12sp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:background="@drawable/themes_category_mid"
                android:text="@string/themes_category_special"
                android:textColor="@color/colorGrayLight"
                android:textSize="12sp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:background="@drawable/themes_category_end"
                android:text="@string/themes_category_premium"
                android:textColor="@color/colorGrayLight"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" />
    </LinearLayout>
</FrameLayout>
